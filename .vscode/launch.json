  "version": "0.2.0",
  "configurations": [
    {
      "name": "Django: Runserver",
      "type": "python",
      "request": "launch",
      "stopOnEntry": false,
      "python": "${workspaceRoot}/donation_portal_env/bin/python",
      "program": "${workspaceRoot}/manage.py",
      "args": [
        "runserver",
        "--no-color",
        "--noreload"
      ],
    },
    {
      "name": "Django: Shell",
      "type": "python",
      "request": "launch",
      "stopOnEntry": false,
      "python": "${workspaceRoot}/donation_portal_env/bin/python",
      "program": "${workspaceRoot}/manage.py",
      "args": [
        "shell"
      ]
    }
  ]
}