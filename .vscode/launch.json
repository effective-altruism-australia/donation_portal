  "version": "0.2.0",
  "configurations": [
    {
      "name": "Django: Debug tests",
      "type": "debugpy",
      "request": "launch",
      "django": true,
      "autoStartBrowser": false,
      "python": "${workspaceRoot}/.venv/bin/python",
      "program": "${workspaceFolder}/manage.py",
      "args": [
        "test",
        "donation.tests.test_emails"
      ],
    },
    {
      "name": "Django: Runserver",
      "type": "debugpy",
      "request": "launch",
      "stopOnEntry": false,
      "python": "${workspaceRoot}/.venv/bin/python",
      "program": "${workspaceRoot}/manage.py",
      "args": [
        "runserver",
        "--noreload"
      ],
    },
    {
      "name": "Django: Shell",
      "type": "debugpy",
      "request": "launch",
      "stopOnEntry": false,
      "python": "${workspaceRoot}/.venv/bin/python",
      "program": "${workspaceRoot}/manage.py",
      "args": [
        "shell"
      ]
    }
  ]
}